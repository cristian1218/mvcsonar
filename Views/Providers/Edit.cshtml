@model WebApp.Models.DB.Provider

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Provider</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="TypeIdId" class="control-label">Tipo ID</label>
                <select asp-for="TypeIdId" class="form-control" asp-items="ViewBag.TypeIdId"></select>
                <span asp-validation-for="TypeIdId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NameProvider" class="control-label">Nombre Proveedor</label>
                <input asp-for="NameProvider" class="form-control" />
                <span asp-validation-for="NameProvider" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastNameProvider" class="control-label">Apellido Proveedor</label>
                <input asp-for="LastNameProvider" class="form-control" />
                <span asp-validation-for="LastNameProvider" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdNumber" class="control-label">Número Identificación</label>
                <input asp-for="IdNumber" class="form-control" />
                <span asp-validation-for="IdNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelNumber" class="control-label">Teléfono</label>
                <input asp-for="TelNumber" class="form-control" />
                <span asp-validation-for="TelNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label">Dirección</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Correo" class="control-label">Correo</label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
