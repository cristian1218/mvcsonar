@model WebApp.Models.DB.Provider

@{
    ViewData["Title"] = "Añadir Proveedor";
}

<h1>Añadir Proveedor</h1>

<h4>Datos del Proveedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameProvider" class="control-label">Nombre </label>
                <input asp-for="NameProvider" class="form-control" />
                <span asp-validation-for="NameProvider" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastNameProvider" class="control-label">Apellido </label>
                <input asp-for="LastNameProvider" class="form-control" />
                <span asp-validation-for="LastNameProvider" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdNumber" class="control-label">Número de Ideinficación</label>
                <input asp-for="IdNumber" class="form-control" />
                <span asp-validation-for="IdNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelNumber" class="control-label">Téléfono</label>
                <input asp-for="TelNumber" class="form-control" />
                <span asp-validation-for="TelNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label">Dirección</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Correo" class="control-label">Correo</label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeIdId" class="control-label">Tipo ID</label>
                <select asp-for="TypeIdId" class ="form-control" asp-items="ViewBag.TypeIdId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
