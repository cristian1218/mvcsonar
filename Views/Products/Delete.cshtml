}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Descripción 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descrption)
        </dd>
        <dt class = "col-sm-2">
            Costo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cost)
