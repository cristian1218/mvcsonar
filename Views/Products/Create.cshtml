@model WebApp.Models.DB.Product

@{
    ViewData["Title"] = "Añadir";
}

<h1>Añadir Nuevo Producto</h1>

<h4>Información del Producto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descrption" class="control-label">Descripción del Producto</label>
                <input asp-for="Descrption" class="form-control" />
                <span asp-validation-for="Descrption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PackingId" class="control-label">Empaquetado</label>
                <select asp-for="PackingId" class ="form-control" asp-items="ViewBag.PackingId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ClassificationId" class="control-label">Clasificación del Producto</label>
                <select asp-for="ClassificationId" class ="form-control" asp-items="ViewBag.ClassificationId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label">Costo del Producto</label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
